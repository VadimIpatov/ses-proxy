%h1.page-title(style="text-align: center; margin-bottom:20px;")
  = @page_title
= haml :_search_form
= haml :_chart
%table.table.table-striped(style="table-layout:fixed")
  %colgoup
    %col(width="15%")
    %col(width="25%")
    %col(width="30%")
    %col(width="20%")
    %col(width="10%")
  %thead
    %tr
      %th System
      %th Sender
      %th Recipients
      %th Subject
      %th Created At
  %tbody
  - for mail in @mails
    %tr
      %td= mail.system
      %td= mail.sender
      %td= mail.recipients
      %td= mail.subject
      %td= mail.created_at.strftime '%d/%m/%Y'
= paginate @mails